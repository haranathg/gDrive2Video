# Google Drive credentials
CREDENTIALS_PATH=credentials.json
GDRIVE_FOLDER_ID=YOUR_GOOGLE_DRIVE_FOLDER_ID

# Google Spreadsheet ID for logging (create spreadsheet and share with service account)
LOG_SPREADSHEET_ID=

# Media directory
MEDIA_DIR=./media

# Sync settings
SYNC_INTERVAL_SECONDS=300

# Display settings
SLIDESHOW_DELAY=8

# Logging settings
LOG_RETENTION_DAYS=3
HISTORY_RETENTION_DAYS=90

# Raspberry Pi deployment credentials
RPI_USER=pi
RPI_HOST=192.168.x.x
RPI_PASSWORD=your_password_here
